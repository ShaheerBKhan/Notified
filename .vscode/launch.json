{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: BaseSpider Scraper",
      "type": "debugpy",
      "request": "launch",
      "module": "scrapy",
      "cwd": "${workspaceFolder}/Scraper/Scraper",
      "args": ["crawl", "Microsoft"],
      "console": "integratedTerminal"
    }
  ]
}
